<h1><%= @article.title %></h1>
<%= @article.content %><hr/>

<p>
  <%= link_to 'List', articles_path %> | 
  <%= link_to 'Edit', edit_article_path %> 
</p>

<p>
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :author %><br />
      <%= f.text_field :author %><br />
    </p>
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %><br />
    </p>
    <p>
      <%= f.submit %>
    </p>  
  <% end %>
</p>
