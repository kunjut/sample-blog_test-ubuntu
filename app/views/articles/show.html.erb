<h1><%= @article.title %></h1>
<%= @article.content %><hr/>

<p>
  <%= link_to 'List', articles_path %> | 
  <%= link_to 'Edit', edit_article_path %> 
</p>

<% if @article.comments.size != 0 %>
  <h2>Комментарии</h2>
  <p>
    <% @article.comments.each do |comment| %>
      Author: <%= comment.author %> |
      Created at: <%= comment.created_at %><br />
      <p><%= comment.body %></p><hr />
    <% end %>
  </p>
<% end %>

<h2>Оставить комментарий</h2>
<p>
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :author %><br />
      <%= f.text_field :author %><br />
    </p>
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %><br />
    </p>
    <p>
      <%= f.submit %>
    </p>  
  <% end %>
</p>
