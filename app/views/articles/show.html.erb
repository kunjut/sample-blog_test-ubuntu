<h1><%= @article.title %></h1>
<%= @article.content %><hr/>

<p>
  <%= link_to 'List', articles_path %> | 
  <%= link_to 'Edit', edit_article_path %> 
</p>

<% if @article.comments != [] %>
  <br /><h2>Комментарии</h2>
  <p>
    <% @article.comments.each do |comment| %>
      
      <p>
      <i>◊ <%= comment.author %> says:</i>
      <%= comment.body %>
      </p>
      <i style="color: #aaaaaa">created at: <%= comment.created_at %></i>
      <hr />
    <% end %>
  </p>
<% end %>

<br /><h2>Оставить комментарий</h2>
<p>
  <%= form_for([@article, @article.comments.build]) do |f| %>
    <p>
      <%= f.label :author %><br />
      <%= f.text_field :author %><br />
    </p>
    <p>
      <%= f.label :body %><br />
      <%= f.text_area :body %><br />
    </p>
    <p>
      <%= f.submit %>
    </p>  
  <% end %>
</p>
