<h1>Edit article</h1>

<%= form_for @article do |f| %>          <!-- @article чтобы указать, что используется -->
  <p>                                    <!-- не новый экземпляр класса Article-->
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %><br />
  </p>
  <p>
    <%= f.submit %>
  </p>  
<% end %>
