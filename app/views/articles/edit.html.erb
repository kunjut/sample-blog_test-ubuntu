<h1>Edit article</h1>

<%= form_for :article, url: article_path(@article), method: :put do |f| %>          
  <p>                                    
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %><br />
  </p>
  <p>
    <%= f.submit %>
  </p>  
<% end %>

<p>
  <a href="/articles">back</a> 
</p>
